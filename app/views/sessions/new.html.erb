<br><br><br>
<div class = " container w-50 p-3 ">
  <div class = "card">
    <h2 class = "card-title text-center mb-4 mt-1"><%= t('sesions.new.login') %></h2>
    <%= form_tag sessions_path, method: :post do %>
      <div class = "form-group">
        <div class = "input-group">
          <div class = "input-group-prepend">
            <span class = "input-group-text"> <i class = "fa fa-at"></i> </span>
          </div>
          <%= email_field_tag :email, nil, class: 'form-control', required: true, placeholder: "Email"%>
        </div>
      </div>

      <div class = "form-group">
        <div class = "input-group">
          <div class = "input-group-prepend">
            <span class = "input-group-text"> <i class = "fa fa-lock"></i> </span>
          </div>
          <%= password_field_tag :password, nil, class: 'form-control', required: true, placeholder: "#{t('users.new.password')}"  %>
        </div>
        <br>
        <div class = "form-group">
          <%= submit_tag "#{t('sesions.new.login')}", class: 'btn btn-dark btn-block', style: "background-color: #000;"%>
        </div>
      </div>
    <% end %>
  </div>
</div>
