<p id="notice"><%= notice %></p>
<div></div>

<div class="containerr container">

  <div class="second_child">
    <table class="table">
      <tr>
        <td><strong>Image:</strong></td>
        <td><strong>Title:</strong></td>
        <td><strong>Category:</strong></td>
        <td><strong>Price:</strong></td>
      </tr>
      <% @products.each do |product| %>
        <tr>
          <% if product.images? %>
              <td><%= image_tag product.images.first.url(:thumb) %></td>
            <% end %>
          <td><%= product.title %></td>
          <td><%= Category.find(product.category_id).title %></td>
          <td><%= product.price %></td>
          <td class="d-flex flex-row-reverse"">
            <span class="border border-dark rounded">
              <%= link_to 'Show', admin_product_path(product), class:"btn btn-light" %>
              <%= link_to 'Edit', edit_admin_product_path(product), class:"btn btn-light"%>
              <%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-light"%>
            </span>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
