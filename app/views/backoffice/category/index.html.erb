<p id="notice"><%= notice %></p>
<div class="d-flex flex-nowrap bd-highlight">
  <div class="container">

    <div><%= link_to 'New category', new_admin_category_path, class: "btn btn-primary"%></div>

  <% @categories.each do |category| %>
    <div class="container alert alert-light">
      <div class="list group-item">
        <div>
          <strong>Description:</strong>
        </div>
        <div><%= category.description %> </div>
        <hr>
        <div>
          <strong>Title:</strong>
        </div>
        <div><%= category.title %></div>
        <hr>
        <div>
          <%= image_tag category.image.url(:large), class: "img-show" if  category.image? %>
        </div>
        <hr>
        <div>
            <%= link_to 'Edit', edit_admin_category_path(category), class:"btn btn-primary"%>
            <%= link_to 'Destroy', admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-primary"%>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<br>
