<br>
<div class="d-flex flex-nowrap bd-highlight">
  <% @products.each do |product| %>
    <div class="container">

      <div><%= product.title %></div>

      <div>
        <strong>Category:</strong>
      </div>
      <div>
        <%= Category.find(product.category_id).title %>
      </div>
      <div>
        <%= image_tag product.image.url(:thumb), class: "img-show" if  product.image? %>
      </div>
      <hr>
      <div>
        <%= link_to 'Show', product, class:"btn btn-primary" %>
        <%= link_to 'Buy', product, class:"btn btn-outline-primary" %>
      </div>
    </div>
    <br>
  <% end %>
</div>
<br>
<div class="row justify-content-center" >
  <%= will_paginate @products, renderer: WillPaginate::ActionView::BootstrapLinkRenderer%>
</div>
