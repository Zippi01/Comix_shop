<h1><%= t('users.new.signup') %></h1>

<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control', required: true %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control', required: true %>
  </div>
  <%= f.submit "#{t('users.new.signup')}", class: 'btn btn-primary btn-lg' %>
<% end %>
